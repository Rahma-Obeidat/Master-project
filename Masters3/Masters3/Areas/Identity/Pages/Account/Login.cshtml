<style>
    .big_div {
        background-image: url("../../../../Img/login.png");
        background-repeat: no-repeat;
        background-size: contain;
        width: 100%;
        height: 700px;
        margin-left: 17%;
        /* margin-top:4%;*/
        position: relative;
    }

    .div_log {
        border: solid 3px #3b5d50;
        border-radius: 50px;
        width: 22%;
        height: 470px;
        margin-left: 8%;
        margin-top: 10%;
        position: absolute;
    }

    h1 {
        text-align: center;
        color: #3b5d50;
    }


    .textbox {
        /*  border: solid 2px #3b5d50;*/
        width: 80%;
        margin-left: 10%;
        margin-right: 10%;
    }

    .lable {
        margin-left: 20%;
        color: #3b5d50;
        font-weight: bold;
    }

    .btn {
        border: solid 2px #3b5d50;
        color: white;
        background-color: #3b5d50;
        margin-left: 23%;
        border-radius: 30px;
        padding: 10px;
        font-size: large;
        font-weight: bold;
        width: 40%;
    }

    .cheakBox {
        margin-left: 10%;
    }

    p {
        margin-left: 15%;
    }

    a {
        text-decoration: none;
        color: #3b5d50;
        font-weight: bold;
    }
</style>
<h1>@ViewData["Title"]</h1>

<div class="big_div">
    <div class="div_log">
        <br />
        @*<div class="row">
        <div class="col-md-4">*@
        <h1>Login</h1><br /><br />
        <section>
            <form id="account" method="post">
                @*<h2>Use a local account to log in.</h2>*@

                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3 textbox">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="UserName" />
                    <label asp-for="Input.Email" class="form-label">UserName</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div><br />
                <div class="form-floating mb-3 textbox">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="cheakBox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class=" btn btn-lg ">Log in</button><br />
                    <p>Don't have an account? <a href="~/Identity/Account/register">Sign up</a> </p>
                </div>
                @*    <div>
                <p>
                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                </p>
                <p>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                </p>
                <p>
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                </p>
                </div>*@
            </form>
        </section>
    </div>
</div>
