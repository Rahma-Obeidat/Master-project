<h1>Rejected Testimonial</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                User Name
            </th>
            <th>
                Opinion

            </th>
            <th>

                Status

            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.Status == "2")
            {
                         <tr>
                        <td>
                        @Html.DisplayFor(modelItem => item.User.UserName)
                        </td>
                        <td>
                        @Html.DisplayFor(modelItem => item.CommentUser)
                        </td>
                        <td>

                            <input hidden value="@item.Id" id="id" name="id">
                            <input type="radio" id="1" name="status" value="1" >
                            <label for="1">Accepted</label><br>
                        <input type="radio" id="2" name="status" value="2" checked>
                            <label for="2">Reject</label><br>

                        </td>

                    </tr>
            }
        }
    </tbody>
</table>