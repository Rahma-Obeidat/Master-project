@model IEnumerable<Testimonial>

@{
    ViewData["Title"] = "Index";
    Layout = "AdminLayout";
}
<style>
    .thumbnail {
        top: -50px;
        left: -35px;
        display: block;
        z-index: 999;
        cursor: pointer;
        -webkit-transition-property: all;
        -webkit-transition-duration: 0.3s;
        -webkit-transition-timing-function: ease;
    }


        .thumbnail:hover {
            transform: scale(5);
        }
</style>

<h1>New Testimonial</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                User Name
            </th>
            <th>
                Opinion

            </th>
            <th>

               Status

            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if(item.Status == "0")
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CommentUser)
                    </td>
                    <form asp-action="Testimonial" asp-controller="Admin" method="post">
                    <td>

                        <input hidden value="@item.Id" id="id" name="id">
                        <input type="radio" id="1" name="status" value="1">
                        <label for="1">Accept</label><br>
                        <input type="radio" id="2" name="status" value="2">
                        <label for="2">Reject</label><br>

                    </td>
                    <td>
                        <input type="submit" value="Save" class="btn btn-success">
                    </td>
                    </form>
                </tr>
            }
        }
    </tbody>
</table>

                        <br />
                        <br />
<h1>Accepted Testimonial</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                User Name
            </th>
            <th>
                Opinion

            </th>
            <th>

                Status

            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if(item.Status == "1")
            {
                 <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CommentUser)
                </td>
                <td>

                    <input hidden value="@item.Id" id="id" name="id">
                    <input type="radio" id="1" name="status" value="1" checked>
                    <label for="1">Accepted</label><br>
                    <input type="radio" id="2" name="status" value="2">
                    <label for="2">Reject</label><br>

                </td>

            </tr>
            }
        }
    </tbody>
</table>

