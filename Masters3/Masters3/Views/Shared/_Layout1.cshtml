						<li><a class="nav-link" asp-action="Testimonial" asp-controller="User">Testimonial</a></li>
					}
					@if (signInManager.IsSignedIn(User))
					{
						<li><a class="nav-link" asp-action="LogOut" asp-controller="Home">Logout</a></li>
					}
					@if (!signInManager.IsSignedIn(User))
					{
						<li><a class="nav-link" href="Identity\Account\Login">Login</a></li>
